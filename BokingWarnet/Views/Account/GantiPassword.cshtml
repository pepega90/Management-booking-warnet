@model GantiPasswordViewModel
@{
    ViewData["Title"] = "Ganti Password";
}

<h1>Ganti Password</h1>

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="CurrentPassword">Masukkan Password</label>
        <input asp-for="CurrentPassword" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="PasswordBaru" >Password Baru</label>
        <input asp-for="PasswordBaru" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="KonfirmasiPassword">Konfirmasi Password</label>
        <input asp-for="KonfirmasiPassword" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>